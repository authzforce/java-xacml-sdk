<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.thalesgroup</groupId>
		<artifactId>authzforce</artifactId>
		<version>2.0.0</version>
		<relativePath>../authzforce</relativePath>		
	</parent>
	<properties>
		<xacml-version>2.0</xacml-version>
		<cxf.version>2.6.2</cxf.version>
		<jdom.version>2.0.4</jdom.version>
	</properties>
	<groupId>com.thalesgroup.authzforce</groupId>
	<artifactId>xacml-sdk</artifactId>
	<name>AuthZForce :: XACML SDK</name>
	<version>3.0.1</version>
	<description>SDK allowing to create Xacml request and parse responses</description>
	<dependencies>
		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom2</artifactId>
			<version>${jdom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.2</version>
		</dependency>
		<!-- 
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-bundle</artifactId>
			<version>${cxf.version}</version>
		</dependency>
		 -->
		<dependency>
			<groupId>javax.xml.ws</groupId>
			<artifactId>jaxws-api</artifactId>
			<version>2.2.8</version>
		</dependency>
		<dependency>
			<groupId>com.sun.jersey</groupId>
			<artifactId>jersey-client</artifactId>
			<version>1.16</version>
		</dependency>
		<dependency>
			<groupId>org.jvnet.jaxb2_commons</groupId>
			<artifactId>jaxb2-basics-runtime</artifactId>
			<version>0.6.4</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
		<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.8.3</version>
				<!-- XACML v3 schema Generation -->
				<executions>
					<execution>
						<id>v3</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<debug>true</debug>
							<strict>false</strict>
							<schemaDirectory>${basedir}/src/main/resources/schema/</schemaDirectory>
							<schemaIncludes>
								<value>xacml-core-v3-schema-wd-17.xsd</value>
							</schemaIncludes>
							<bindingIncludes>
								<include>xacml-core-v3-schema-wd-17.xjb</include>
							</bindingIncludes>
							<extension>true</extension>
							<args>
								<arg>-Xannotate</arg>
								<args>-Xequals</args>
								<args>-XhashCode</args>
							</args>
							<plugins>
								<plugin>
									<groupId>org.jvnet.jaxb2_commons</groupId>
									<artifactId>jaxb2-basics</artifactId>
									<version>0.6.4</version>
								</plugin>
								<plugin>
									<groupId>org.jvnet.jaxb2_commons</groupId>
									<artifactId>jaxb2-basics-annotate</artifactId>
									<version>0.6.4</version>
								</plugin>
							</plugins>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
