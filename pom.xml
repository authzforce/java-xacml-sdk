<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.thalesgroup</groupId>
		<artifactId>authzforce</artifactId>
		<version>2.0.0</version>
		<relativePath>../authzforce</relativePath>		
	</parent>
	<properties>
		<xacml-version>2.0</xacml-version>
		<cxf.version>2.6.2</cxf.version>
		<jdom.version>2.0.4</jdom.version>
	</properties>
	<groupId>com.thalesgroup.authzforce</groupId>
	<artifactId>xacml-sdk</artifactId>
	<name>AuthZForce :: XACML SDK</name>
	<description>SDK allowing to create Xacml request and parse responses</description>
	<dependencies>
		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom2</artifactId>
			<version>${jdom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.2</version>
		</dependency>
		<!-- 
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-bundle</artifactId>
			<version>${cxf.version}</version>
		</dependency>
		 -->
		<dependency>
			<groupId>javax.xml.ws</groupId>
			<artifactId>jaxws-api</artifactId>
			<version>2.2.8</version>
		</dependency>
		<dependency>
			<groupId>com.sun.jersey</groupId>
			<artifactId>jersey-client</artifactId>
			<version>1.16</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.8.2</version>
				<executions>
					<execution>
						<id>xjc-${xacml-version}</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<debug>false</debug>
							<verbose>false</verbose>
							<extension>false</extension>
							<schemaDirectory>${basedir}/src/main/resources/schema/</schemaDirectory>
							<schemaIncludes>
								<include>access_control-xacml-2.0-context-schema-os.xsd</include>
								<include>xacml-core-v3-schema-wd-17.xsd</include>
							</schemaIncludes>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
