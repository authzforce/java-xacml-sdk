<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<moduleSet>

			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>com.thalesgroup.authzforce.attributeFinder:ldap</include>
				<include>com.thalesgroup.authzforce.attributeFinder:sql</include>
				<include>com.thalesgroup.authzforce.attributeFinder:certificate</include>
				<include>com.thalesgroup.authzforce.core:authzforce</include>
				<include>com.thalesgroup.authzforce.core:tazs</include>
				<include>com.thalesgroup.authzforce.core:model</include>
				<include>com.thalesgroup.authzforce.interface:rest</include>
				<include>com.thalesgroup.authzforce.interface:soap</include>
				<include>com.thalesgroup.authzforce.policyFinder:directoryPolicyFinder</include>
				<include>com.thalesgroup.authzforce.policyFinder:filePolicyFinder</include>
			</includes>
			<sources>
				<includes>
					<include>*.*</include>
				</includes>
			</sources>
			<binaries>
				<outputDirectory>modules/${artifactId}-${project.version}</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>true</includeDependencies>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>true</useTransitiveDependencies>
						<includes>
							<include>*.*</include>
						</includes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>